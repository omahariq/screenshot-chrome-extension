{
  "manifest_version": 3,
  "name": "Exemplar Capture",
  "version": "1.0.0",
  "description": "Capture and preserve exemplars of customer-facing materials with compliance labeling.",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "debugger"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
